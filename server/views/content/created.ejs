<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
        <br>
        <br>
        <br>
        <br>
          <% if(surveys.length > 0){ %>
          <h3>Surveys List </h3>
          <br>          
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th class="text-center">Name</th>
              <th class="text-center">Description</th>
              <th class="text-center">Type</th>
              <th class="text-center">Active</th>
              <th class="text-center">Go To Survey</th>              
            </tr>
            
            <% for (let count = 0; count < surveys.length; count++) { %>
            <tr>
              <td class="text-center"><%= surveys[count].surveyName %></td>
              <td class="text-center"><%= surveys[count].survey_Description%></td>
              <%if(surveys[count].surveyType == '1'){ %>
              <td class="text-center">Short Answer</td>
             <% }else{ %>
                 <td class="text-center">Rating</td>
              <% } %>

              <td class="text-center"><%= surveys[count].survey_active%>
              </td>
              <td class="text-center">
               <%if(surveys[count].surveyType == '1'){ %>
              <a href="/surveys/editSurvey/<%= surveys[count]._id %>" class="btn btn-primary">
              <% }else{ %>
              <a href="/surveys/editSurvey/<%= surveys[count]._id %>" class="btn btn-primary">
              <% } %>
              <i class="fa fa-pencil-square-o"></i> Edit Survey</a>
              </td>
            </tr>
            <% } %>
            
          </table>
           <% } else { %>
           <h3>No survey has been created by you.</h3>
<%} %>
        </div>
      </div>
    </div>


<% include ../partials/footer.ejs %>


